<body id="page-top" style="background-color:#2b5b79; overflow-x: hidden; overflow-y: hidden">

  <h1 class="register-title" style = "margin-top: 50px">Municipality</h1>

  <form class="register">
    <input type="email" class="register-input" id="email" placeholder="Email address">
    <input type="text" class="register-input" id="firstname" placeholder="First Name">
    <input type="text" class="register-input" id="lastname" placeholder="Last Name">
    <input type="text" class="register-input" id="username" placeholder="User Name">
    <input type="password" class="register-input" id="password" placeholder="Password">
    <input type="number" class="register-input" id="age" placeholder="Age">
    <input type="text" class="register-input" id="gender" placeholder="gender or Whatever u prefer #pc">
    <input type="tel" class="register-input" id="phonenumber" placeholder="e.g 123-456-7890">
    <input type="text" class="register-input" id="institution" placeholder="School">

    <p id="error"></p>
    <button type="button" onclick="register()" value="Create Account" class="register-button">Create Account</button>
    <p style = "margin-top: 20px; text-align: center">Don't have an account? Register <a href = "/login">here!</a></p>
  </form>

 <script>
  function register(){
      var firebase = require("/node_modules/firebase");
      var ref = new firebase("https://palylaunch.firebaseio.com/");
      var authData = ref.getAuth();

      if(document.getElementById("password").value.length > 6){
        ref.createUser({
          email: document.getElementById("email").value,
          password: document.getElementById("password").value
        }, function(error, userData) {
            if (error) {
              switch (error.code) {
                case "EMAIL_TAKEN":
                  console.log("The new user account cannot be created because the email is already in use.");
                  document.getElementById("error").innerHTML = "Email Taken";
                  break;
                case "INVALID_EMAIL":
                  console.log("The specified email is not a valid email.");
                  document.getElementById("error").innerHTML = "Use your real Email";
                  break;
                default:
                  console.log("Error creating user:", error);
                  document.getElementById("error").innerHTML = "Something messed up";
              }
            } else {
              console.log("Successfully created user account with uid:", userData.uid);
              ref.child("users").child(userData.uid).set({
                firstname: document.getElementById("firstname").value,
                lastname: document.getElementById("lastname").value,
                age: document.getElementById("age").value,
                gender: document.getElementById("gender").value,
                phoneNumber: document.getElementById("phonenumber").value,
                school: document.getElementById("institution").value,
                username: document.getElementById("username").value,
              });
              location.href = "/";
            }
      });
      }
    else{
      document.getElementById("error").innerHTML = "Password too short";
    }
  }
  </script>
</body>
